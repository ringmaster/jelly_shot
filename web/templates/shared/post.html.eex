<section class="post">
  <header class="post-header">
    <a href="/posts/<%= @post.slug %>">
      <h2 class="post-title"><%= @post.title %></h2>
    </a>

    <p class="post-meta">
      By
      <%= for author <- @post.authors do %>
        <a href="/posts?author=<%= author %>"><%= author %></a>
      <% end %>

      on <%= Timex.format!(@post.date, "{WDshort}, {Mshort} {D}, {YYYY}") %>

      in
      <%= for category <- @post.categories do %>
        <a href="/tag/<%= category %>" class="post-category post-category-<%= category %>"><%= category %></a>
      <% end %>
    </p>
  </header>

  <div class="post-description">
    <p><%= raw @post.intro %></p>
  </div>
</section>
